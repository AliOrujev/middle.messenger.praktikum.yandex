<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Авторизация</title>
    <link rel="stylesheet" href="../../styles/style.css">
</head>
<body class="containerSettings">
<div class="settingsForm">
    <h1 class="title">Настройки пользователя:</h1>
    {{ components/input/input labelClass="required" inputName="first_name" inputClass="input" placeholder="Имя" type="text"}}
    {{ components/input/input labelClass="required" inputName="second_name" inputClass="input" placeholder="Фамилия" type="text"}}
    {{ components/input/input labelClass="required" inputName="login" inputClass="input" placeholder="Логин" type="text"}}
    {{ components/input/input labelClass="required" inputName="email" inputClass="input" placeholder="Email" type="text"}}
    {{ components/input/input labelClass=null inputName="phone" inputClass="input" placeholder="Телефон" type="number"}}
    {{ components/componentsinput/input labelClass="required" inputName="password" inputClass="input" placeholder="Старый пароль" type="password"}}
    {{ components/input/input labelClass="required" inputName="password" inputClass="input" placeholder="Новый пароль" type="password"}}
    {{ components/input/input labelClass=null inputName="avatar" inputClass="input" placeholder="Загрузить новый автаар" type="file"}}
    <div>
        <span class="requiredDescription"> - обязательные поля</span>
    </div>
    {{ components/button/button onClick="../../pages/chat/chatList.hbs" header="Изменить данные"}}
</div>
</body>
</html>

