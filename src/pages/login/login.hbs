<link rel="stylesheet" href="../../styles/style.css">

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Авторизация</title>
</head>
<body class="containerLogin">
<div class="loginForm">
    <h1 class="title">Вход</h1>
    <div>
        <label class="required"></label>
        <input class="input" placeholder="Логин" type="text" value="">
    </div>
    <div>
        <label class="required"></label>
        <input class="input" placeholder="Пароль"  type="password" value="">
    </div>
    <div>
        <span class="requiredDescription"> - обязаталельные поля</span>
    </div>
    <div>
        <input class="inputCheckbox"type="checkbox">
        <label class="check" for="checkbox">Запомнить меня</label>
    </div>
    <a href="../register/register.hbs">Еще не зарегистрированы?</a>
    {{>button/button onClick="../../pages/chat/chatList.hbs" header="Войти"}}
</div>
</body>
</html>

